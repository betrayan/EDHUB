rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isDemoUser(userId) {
      return userId == 'demo-user-123';
    }

    function isOwner(userId) {
      // Allow if authenticated AND uid matches
      // OR if it is the specific demo user (even if unauthenticated)
      return (isAuthenticated() && request.auth.uid == userId) || isDemoUser(userId);
    }

    // --- Rules ---

    // 1. User Private Data
    match /artifacts/edhub/users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    // 2. Public/Shared Data
    match /artifacts/edhub/public/data/{collectionName}/{docId} {
      
      // Allow read if authenticated OR if it's public info (Events/Announcements often public)
      // For stricter privacy, revert to: if isAuthenticated();
      allow read: if true; 

      // Allow create if authenticated OR if creating as demo user
      allow create: if isAuthenticated() || 
                    (request.resource.data.authorId == 'demo-user-123') ||
                    (request.resource.data.studentId == 'demo-user-123') ||
                    (request.resource.data.userId == 'demo-user-123');

      // Allow update/delete if owner
      allow update, delete: if (isAuthenticated() && (
        resource.data.authorId == request.auth.uid || 
        resource.data.studentId == request.auth.uid ||
        resource.data.userId == request.auth.uid
      )) || (
        resource.data.authorId == 'demo-user-123' ||
        resource.data.studentId == 'demo-user-123' ||
        resource.data.userId == 'demo-user-123'
      );
    }
  }
}
